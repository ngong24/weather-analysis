# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production-12345
JWT_SECRET_KEY=jwt-secret-key-change-this-in-production-67890

# Database
DATABASE_URI=sqlite:///weather.db

# Coordinates (Default: Hanoi)
DEFAULT_LATITUDE=21.0285
DEFAULT_LONGITUDE=105.8542
DEFAULT_CITY=Hanoi
DEFAULT_COUNTRY=Vietnam

# Open-Meteo API (No key needed - it's free)
OPEN_METEO_API_URL=https://api.open-meteo.com/v1/forecast
OPEN_METEO_ARCHIVE_URL=https://archive-api.open-meteo.com/v1/archive
OPEN_METEO_GEOCODING_URL=https://geocoding-api.open-meteo.com/v1/search

# JWT Settings
JWT_ACCESS_TOKEN_EXPIRES_HOURS=1
JWT_REFRESH_TOKEN_EXPIRES_DAYS=30

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Server Settings
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_PORT=8000